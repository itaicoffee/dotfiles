#!/usr/bin/env sh
# layout & feel
yabai -m config layout           bsp
yabai -m config window_gap       8
yabai -m config top_padding      8
yabai -m config bottom_padding   8
yabai -m config left_padding     8
yabai -m config right_padding    8
yabai -m config auto_balance     on

# borders/opacity (optional)
yabai -m config window_border           on
yabai -m config window_border_width     2
yabai -m config active_window_border_color  0xffc6a0f6
yabai -m config normal_window_border_color  0xff3b3b3b
yabai -m config window_opacity          on
yabai -m config active_opacity          1.0
yabai -m config normal_opacity          0.95

# mouse helpers
yabai -m config mouse_modifier   alt
yabai -m config mouse_action1    move
yabai -m config mouse_action2    resize

# float rules (tune these for your stack)
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^App Store$"       manage=off
yabai -m rule --add app="^Zoom$"            manage=off
yabai -m rule --add app="^Simulator$"       manage=off
yabai -m rule --add app="^Photos$"          manage=off
yabai -m rule --add app="^Calendar$" title=".*" manage=off

# space labels (example)
yabai -m space 1 --label dev
yabai -m space 2 --label term
yabai -m space 3 --label web
yabai -m space 4 --label comms
yabai -m space 5 --label docs

# send apps to spaces by role
yabai -m rule --add app="^Xcode$"       space=dev
yabai -m rule --add app="^(Kitty|iTerm2)$" space=term
yabai -m rule --add app="^(Arc|Chrome|Firefox|Safari)$" space=web
yabai -m rule --add app="^(Slack|Discord|Messages)$" space=comms
yabai -m rule --add app="^(Notion|Obsidian|Preview)$" space=docs

# signals to keep layouts tidy
yabai -m signal --add event=display_added   action="yabai -m space --balance"
yabai -m signal --add event=space_changed   action="yabai -m space --balance"
